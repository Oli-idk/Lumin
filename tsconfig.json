{
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
          "~/*": ["./src/*"]
        }
    },
    "files": [
        "src/index.ts"
    ],
    "include": ["./**/*.ts"],
    "exclude": [
        "node_modules",
        "dist"
    ],
}